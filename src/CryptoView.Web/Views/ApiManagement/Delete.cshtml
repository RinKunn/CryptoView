@model CryptoView.Web.Models.ApiManagement.ApiInfo
@{
    ViewData["Title"] = "Deleting API";
}
<h1>Deleting API</h1>
<p class="text-danger">Are you sure you want to delete API?</p>
<div asp-validation-summary="All" class="text-danger m-2"></div>
<form id="deleteApi" asp-action="Delete" asp-route-exchangeId="@Model.ExchangeInfo?.Id">
    <fieldset disabled="disabled">
        <partial name="_ApiFormPartial.cshtml" />
    </fieldset>
    <div class=mb-3>
        <a class="btn btn-warning" asp-action="Index">Cancel</a>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>

